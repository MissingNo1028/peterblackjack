<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ff194D1E"
    android:orientation="vertical">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/dealer_area"
    >
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/dealer_total"/>
    
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/card_area">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/dealer_cards"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/deck"
        android:layout_marginBottom="50sp">
        
        
    </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deck"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <ImageView
        android:id="@+id/deck_image"
        android:layout_height="80dp"
        android:layout_width="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cardback"
        />
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_cards"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/deck"
            android:layout_marginTop="50sp">
            
        </RelativeLayout>
    
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/player_area"
    android:layout_marginTop="50sp"
    >
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/hit_button"
        android:text="@string/hit"
        android:layout_toLeftOf="@+id/player_total"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/player_total"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/stay_button"
        android:text="@string/stay"
        android:layout_toRightOf="@+id/player_total"
        />
</RelativeLayout>

    

</LinearLayout>
